{
  "$schema": "https://biomejs.dev/schemas/1.1.2/schema.json",
  "files": {
    "ignore": ["node_modules", "dist", "src/generated.ts"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentSize": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
